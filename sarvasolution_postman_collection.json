{
    "info": {
        "_postman_id": "sarvasolution-kyc-api-v1",
        "name": "SarvaSolution Full API (with KYC)",
        "description": "Comprehensive Postman collection including Auth, Profile, Admin, and KYC flows.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"fullName\": \"Jane Doe\",\n    \"email\": \"jane@example.com\",\n    \"phone\": \"9988776655\",\n    \"sponsorId\": \"SVS000001\",\n    \"panCardNumber\": \"ABCDE1111E\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/register/user",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "register",
                                "user"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"memberId\": \"SVS000001\",\n    \"password\": \"adminpassword123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/login/user",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "login",
                                "user"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "KYC",
            "item": [
                {
                    "name": "Submit KYC (Multipart)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "aadhaarNumber",
                                    "value": "123456781234",
                                    "type": "text"
                                },
                                {
                                    "key": "panCardNumber",
                                    "value": "ABCDE1111E",
                                    "type": "text"
                                },
                                {
                                    "key": "aadhaarFront",
                                    "type": "file",
                                    "src": []
                                },
                                {
                                    "key": "aadhaarBack",
                                    "type": "file",
                                    "src": []
                                },
                                {
                                    "key": "panImage",
                                    "type": "file",
                                    "src": []
                                },
                                {
                                    "key": "bankDetails",
                                    "value": "{\"bankName\":\"Axis\",\"accountNumber\":\"123\",\"ifscCode\":\"AXIS001\"}",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/kyc/submit",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "kyc",
                                "submit"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Profile",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Verify KYC",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"verified\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/admin/kyc/verify/SVS000002",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "kyc",
                                "verify",
                                "SVS000002"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Users",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/admin/users",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "users"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (pm.response.code === 200 || pm.response.code === 201) {",
                    "    var jsonData = pm.response.json();",
                    "    var token = (jsonData.data && jsonData.data.token) || jsonData.token;",
                    "    if (token) { pm.environment.set(\"token\", token); }",
                    "}"
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}