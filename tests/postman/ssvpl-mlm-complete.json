{
    "info": {
        "_postman_id": "ssvpl-mlm-complete",
        "name": "SSVPL MLM Complete Suite",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Admin Login",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"email\": \"admin@ssvpl.com\", \"password\": \"adminpassword123\"}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/admin/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "admin",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Product",
            "item": [
                {
                    "name": "Create Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"productName\": \"Postman Item\", \"price\": 1000, \"mrp\": 1180, \"gstRate\": 18, \"stockQuantity\": 10}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/product/create",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "product",
                                "create"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Franchise",
            "item": [
                {
                    "name": "Create Simple Franchise",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"name\": \"Postman Franchise\", \"email\": \"postman@test.com\", \"phone\": \"9988776655\"}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/franchise/create",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "franchise",
                                "create"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8000/api/v1"
        },
        {
            "key": "adminToken",
            "value": ""
        }
    ]
}